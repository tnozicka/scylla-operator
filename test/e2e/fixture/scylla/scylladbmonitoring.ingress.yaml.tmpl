apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: "e2e-helpers-{{ .scyllaDBMonitoringName }}-prometheus"
spec:
  rules:
  - host: "{{ {{ .scyllaDBMonitoringName }}-prometheus.{{ .namespace }}.svc }}"
    http:
      paths:
      - backend:
          service:
            name: "{{ $.scyllaDBMonitoringName }}-prometheus"
            port:
              number: 3000
        path: /
        pathType: Prefix
