apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: "e2e-helpers-{{ .scyllaDBMonitoringName }}-prometheus"
  annotations:
    haproxy-ingress.github.io/ssl-passthrough: "true"
spec:
  ingressClassName: haproxy
  rules:
  - host: "{{ .scyllaDBMonitoringName }}-prometheus.{{ .namespace }}.svc"
    http:
      paths:
      - backend:
          service:
            name: "{{ $.scyllaDBMonitoringName }}-prometheus"
            port:
              number: 9090
        path: /
        pathType: Prefix
